<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#303739"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="17sp"
            android:text="@string/home_asset_private_money"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/iv_home_asset_menu"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="end|center_vertical"

            android:src="@mipmap/paragraph_right"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_home_asset_total_asset"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/home_asset_total_money"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/tv_home_asset_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="100000.00"
        android:textColor="#FFFFFF"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_asset_public_key"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="26dp"
            android:text="EFDGDSGwrfgfdxg....wwerzsdfgD"
            android:textSize="12sp"
            android:maxLines="1"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/iv_home_asset_receive"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/qrcode"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_home_asset_scan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_marginRight="11dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/focus"
            />

        <ImageView
            android:id="@+id/iv_home_asset_send"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_marginRight="14dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/move_up"
            />
    </LinearLayout>
</LinearLayout>
