<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/as_recent_left"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/as_transfer_type_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="TODO"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/arrow_down" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/as_transfer_type_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/as_transfer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:hint="BTMfdsafdsa...fewiojlfdaf"/>

            <TextView
                android:id="@+id/as_transfer_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2018-06-17 18:00:10"/>
        </LinearLayout>

    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/as_recent_right"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/as_number_of_transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="-100.0"/>
        <TextView
            android:id="@+id/as_transfer_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="交易失败"/>
    </LinearLayout>

</LinearLayout>