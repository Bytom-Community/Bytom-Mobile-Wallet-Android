<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >

    <RelativeLayout
        android:id="@+id/rl_nav_0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_nav_0"
            style="@style/mainNavBarImgStyle"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_nav_0"
            style="@style/mainNavBarTextStyle"
            android:layout_below="@id/iv_nav_0"
            android:text="@string/nav_assets"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_nav_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_nav_1"
            style="@style/mainNavBarImgStyle"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_nav_1"
            android:layout_below="@id/iv_nav_1"
            style="@style/mainNavBarTextStyle"
            android:text="@string/nav_mine"/>
    </RelativeLayout>

</LinearLayout>